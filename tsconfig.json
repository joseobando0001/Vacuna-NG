{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "module": "esnext", 
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
